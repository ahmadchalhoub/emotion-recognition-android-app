<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Welcome to the Emotion Recognition App!"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/continueText"
        android:layout_width="315dp"
        android:layout_height="64dp"
        android:layout_marginTop="88dp"
        android:gravity="center"
        android:text="You can continue by pressing the button below!"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emotionsList" />

    <TextView
        android:id="@+id/emotionsList"
        android:layout_width="369dp"
        android:layout_height="89dp"
        android:layout_marginTop="104dp"
        android:gravity="center"
        android:text="This app can detect any of the following seven emotions:\n\n
Angry, Disgusted, Afraid, Happy, Sad, Surprised, Neutral"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" />

    <Button
        android:id="@+id/cameraxButton"
        android:layout_width="125dp"
        android:layout_height="61dp"
        android:onClick="openCameraX"
        android:text="Begin!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/continueText"
        app:layout_constraintVertical_bias="0.301" />

</androidx.constraintlayout.widget.ConstraintLayout>