<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/harry_potter"
        android:layout_width="109dp"
        android:layout_height="190dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:onClick="DetectFace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/harry_potter" />


    <ImageView
        android:id="@+id/angry_image"
        android:layout_width="109dp"
        android:layout_height="190dp"
        android:layout_marginTop="44dp"
        android:onClick="LoadGrayImage"
        app:layout_constraintEnd_toStartOf="@+id/happy_image"
        app:layout_constraintStart_toEndOf="@+id/harry_potter"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/angry_image" />

    <ImageView
        android:id="@+id/happy_image"
        android:layout_width="109dp"
        android:layout_height="190dp"
        android:layout_marginTop="44dp"
        android:onClick="LoadGrayImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/happy_image" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="280dp"
        android:layout_height="450dp"
        android:layout_marginTop="224dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>